FROM node:20-alpine

WORKDIR /app

# Install Expo CLI globally
RUN npm install -g expo-cli

# Copy package files
COPY package*.json ./

# Install dependencies with legacy peer deps due to eslint version conflicts
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose Expo ports
EXPOSE 8081 19000 19001

# Start Expo
CMD ["npm", "start"]